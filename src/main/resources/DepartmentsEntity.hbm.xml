<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.proj01.DepartmentsEntity" table="departments" schema="db">
        <composite-id mapped="true" class="org.example.proj01.DepartmentsEntityPK">
            <key-property name="iddepartments">
                <column name="iddepartments" sql-type="int"/>
            </key-property>
            <key-property name="departmentscol">
                <column name="departmentscol" sql-type="varchar(45)" length="45"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>