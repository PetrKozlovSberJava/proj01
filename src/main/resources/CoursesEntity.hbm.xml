<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.proj01.CoursesEntity" table="courses" schema="db">
        <composite-id mapped="true" class="org.example.proj01.CoursesEntityPK">
            <key-property name="idcourse">
                <column name="idcourse" sql-type="int"/>
            </key-property>
            <key-property name="coursename">
                <column name="coursename" sql-type="varchar(45)" length="45"/>
            </key-property>
            <key-property name="coursepage">
                <column name="coursepage" sql-type="varchar(45)" length="45"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>